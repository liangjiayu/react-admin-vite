{
  "compilerOptions": {
    /* Base */
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./",

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "resolveJsonModule": true,

    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
